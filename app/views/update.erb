
<h1>Edit Recipe</h1>
<form action="/recipes/<%= @recipe.id %>" method="POST">
	<input type="text" name="name" placeholder="Recipe Name:" value="<%= @recipe.name %>"/>
	<input type="text" name="ingredients" placeholder="Ingredients:" value="<%= @recipe.ingredients %>"/>
    <input type="text" name="cook_time" placeholder="Cook Time:" value="<%= @recipe.cook_time %>"/>
    <input type="hidden" name="_method" value="patch"/>
	<input type="submit" value="Submit">
</form>